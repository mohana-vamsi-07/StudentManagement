{
    // Configuration for connecting to MongoDB
    "StudentStoreDatabaseSettings": {
        // The name of the MongoDB collection for student courses
        "StudentCoursesCollectionName": "studentcourses",

        // Connection string to the MongoDB server (localhost on default port 27017)
        "ConnectionString": "mongodb://localhost:27017",

        // Name of the MongoDB database to use
        "DatabaseName": "myFirstDatabase"
    },

    // Logging configuration
    "Logging": {
        "LogLevel": {
            // Sets default logging level to Information
            "Default": "Information",

            // Sets logging level for ASP.NET Core internal messages to Warning
            "Microsoft.AspNetCore": "Warning"
        }
    },

    // Allows the app to accept requests from any host
    "AllowedHosts": "*"
}
